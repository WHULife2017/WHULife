<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="15dp">

    <LinearLayout
        android:id="@+id/layout_checkboxForOne"
        android:layout_width="match_parent"
        android:layout_height="90dp"
        android:orientation="horizontal"
        android:background="@color/touming">
        <TextView
            android:id="@+id/txtview_checkboxlist_num"
            android:layout_width="40dp"
            android:layout_height="match_parent"
            android:textSize="30dp"
            android:gravity="center"
            android:textColor="#FFFFFF"
            android:text="1"/>
        <CheckBox
            android:id="@+id/checkbox_checkboxlist_check"
            android:layout_width="40dp"
            android:layout_height="match_parent"
            android:gravity="center"/>

        <LinearLayout
            android:id="@+id/layout_ForInfo"
            android:layout_width="match_parent"
            android:layout_height="90dp"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/textview_event"
                android:layout_width="200dp"
                android:layout_height="match_parent"
                android:gravity="center"
                android:textSize="20dp"
                android:textColor="#FFFFFF"
                android:text="ssssssss"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">
                <TextView
                    android:id="@+id/textview_time"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1.0"
                    android:gravity="center"
                    android:textSize="15dp"
                    android:textColor="#FFFFFF"
                    android:text="2019.11.17"/>
                <TextView
                    android:id="@+id/textview_place"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1.0"
                    android:gravity="center"
                    android:textSize="15dp"
                    android:textColor="#FFFFFF"
                    android:text="计算机学院A403"/>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>