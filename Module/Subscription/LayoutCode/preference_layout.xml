<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="请先告诉我你所感兴趣的方面"
        android:gravity="center"
        android:textSize="50px"/>
    <CheckBox
        android:id="@+id/checkbox_lecture"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="学术报告"
        android:textSize="50px" />
    <CheckBox
        android:id="@+id/checkbox_sports"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="体育赛事"
        android:textSize="50px"/>
    <CheckBox
        android:id="@+id/checkbox_movie"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="梅操电影"
        android:textSize="50px" />
    <CheckBox
        android:id="@+id/checkbox_supermakert"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="自强活动"
        android:textSize="50px"/>
    <Button
        android:id="@+id/button_selectall"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="全部选择"
        android:textSize="50px"/>
    <Button
        android:id="@+id/button_reset"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="全部重置"
        android:textSize="50px"/>
    <Button
        android:id="@+id/button_commit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="提交喜好"
        android:textSize="50px"/>
</LinearLayout>